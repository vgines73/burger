<h1>EAT DEM BURGERS BREH!</h1>

<h2>Burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{>burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured "Nom Noms"</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{>burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">
    <div class="form-group">
        <label for="burger-name">Burger: </label>
        <input type="text" id="burger-name" name="burger-name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured</label><br>
        <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured! "Nom Nom">
        <input type="radio" name="devoured" value="0" id="not-eaten">Not Eaten>
    </div>

    <button type= "submit">Add a Burger</button>
</form>